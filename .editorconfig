; https://editorconfig.org
root = true

; default configuration
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab

; nixpkgs-fmt trigger by rnix
[{*.nix,flake.lock}]
indent_style = space
indent_size = 2

; editorconfig trigger by sumneko_lua
[*.lua]
indent_style = space
indent_size = 2

; a YAML file require a space for indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2

; leave generated code alone
[*.generated.*]
indent_style = unset
